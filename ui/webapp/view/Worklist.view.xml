<mvc:View controllerName="randomizer.ui.ui.controller.Worklist" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	displayBlock="true">
	<Page showHeader="true" title="SAP CoE Randomizer" class="sapUiResponsiveContentPadding" showFooter="true">
		<content>
			<l:Grid defaultSpan="L4 M4 S12" class="sapUiSmallMarginTop">
				<l:content>
					<ObjectListItem id="productitem-small-0" title="{random>/Sectors}" intro="Sector" icon="sap-icon://building"></ObjectListItem>
					<ObjectListItem id="productitem-small-1" title="{random>/EmergingTechnologies}" intro="Emerging Technologies" icon="sap-icon://lab"></ObjectListItem>
					<ObjectListItem id="productitem-small-2" title="{random>/Processes}" intro="Processes" icon="sap-icon://process"></ObjectListItem>
					<!--<ObjectListItem id="productitem-small-3" title="{random>/SAPProducts}" intro="SAP Products" icon="sap-icon://product"></ObjectListItem>-->
				</l:content>
			</l:Grid>
		</content>
		<footer>
			<Toolbar>
				<Button icon="sap-icon://microphone" press="onMicPress" width="50%"/>
				<Button id="productitem-large-1" text="Randomize!" width="50%" press="readNumberOfElements"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>